<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="6dp"
    app:cardCornerRadius="6dp"
    android:padding="16sp"
    android:id="@+id/contact_list"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Name"
            android:id="@+id/stateName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Name"
            android:id="@+id/personName"
            android:layout_below="@+id/stateName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person Role"
            android:id="@+id/personRole"
            android:layout_below="@+id/personName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Township Name"
            android:id="@+id/departmentName"
            android:layout_below="@+id/personRole"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Township Name"
            android:id="@+id/phoneNumber"
            android:layout_below="@+id/departmentName"/>













    </RelativeLayout>
</androidx.cardview.widget.CardView>